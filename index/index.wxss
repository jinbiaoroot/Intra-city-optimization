/* 顶部样式 */
.top_grid {
  background-color: #E70808;
  height: 130px;width: 100%;
  border-radius: 0 0 20px 20px;
}

.search {
  background-color: aliceblue;
  border: 2px solid white;
  border-radius: 20px;
  margin-left: 20px;
  width: 50%;height: 30px;
}

.swiper {
  margin: 10px;
  /* border: 5px solid aqua; */
  width: auto;height: 293rpx;
}
.swiper image{
  width: 100%;height: 100%;
}
.bottom-style{
  display: flex;justify-content: space-evenly;align-items:center; margin-top: 75px;background-color: white;
  height: 85px;
  border-radius: 10px;
}

.bottom-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bottom-item image{
  width: 80rpx;
  height: 80rpx;
}
.bottom-item text{
  margin-top: 3px;
  font-size: 0.8em;
  color: #808080;
}
.scrollsytle{
  margin-top: 20px;
  /* margin-left: 50px; */
  /* padding-left: 20px; */
}
.item {
	white-space: nowrap;   
	display: inline-block;
  padding: 5px;
  justify-content: space-evenly;
  font-size: 0.8em;
}
.item-active {
	color:#E70808;
	border-bottom: 2px solid #E70808;
  font-weight: bold;
  font-size: 1.0em;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.productfor {
  margin: 5px 10px;
  background-color: white;
  /* margin-top: 15px;margin-bottom: 15px; */
  border: 1px #EEEEEE solid;
  /* background-color: ; */
  border-top-right-radius:15px;border-top-left-radius:15px;
  border-bottom-right-radius:10px;border-bottom-left-radius:10px;
}
.productimage {
  /* border: 5px solid aqua; */
  width: auto;height: 330rpx;
}
.productimage image{
  width: 100%;height: 100%;
}

.kmstyle {
  display:flex;flex-direction: row; justify-content:center;
  line-height: 20px;
  margin-left: 12px;
  font-size: 0.8em;
  background-color:#777777;color: white;
  height: 20px;width: 60px; margin-top: 5px;
  /* text-align: center; */
  border-radius: 10px;
